<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Define FlightService bean -->
    <bean id="flightService" class="com.model.FlightService" />

    <!-- Define TicketService bean and inject FlightService -->
    <bean id="ticketService" class="com.model.TicketService">
        <property name="flightService" ref="flightService" />
    </bean>

</beans>
