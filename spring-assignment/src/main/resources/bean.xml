<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- DoctorRepository bean -->
    <bean id="doctorRepository" class="com.model.DoctorRepository" />

    <!-- AppointmentService bean -->
    <bean id="appointmentService" class="com.model.AppointmentService">
        <property name="doctorRepository" ref="doctorRepository" />
    </bean>

</beans>
